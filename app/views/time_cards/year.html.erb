	<div class="row">
		<a href="http://hourslogger.com/" id="link_back"><button class="col-xs-2"  id="back">Back</button></a>
		<div class="col-xs-10"></div>
	</div>
	
	<div class="header">
		<div class="row">
			<div class="col-xs-1 col-sm-2 col-lg-4"></div>
			<%= image_tag("logo.png", :id => "logo_3", :class => "col-xs-10 col-sm-8 col-lg-4") %>
			<div class="col-xs-1 col-sm-2 col-lg-4"></div>
		</div>
	</div>



	<div class="row">
		<div id="menu">
		<div class="col-xs-1 col-sm-2 col-lg-4"></div>
			<div class="col-xs-10 col-sm-8 col-lg-4">
			<p class="menu_item col-xs-3" ><%= link_to "Week", "/stats" %></p>
			<p class="menu_item col-xs-3" ><%= link_to "Month", "/month" %></p>
			<p class="menu_item col-xs-3" id="current">Year</p>
			<p class="menu_item col-xs-3" ><%= link_to "All", "/all" %></p>
		</div>
		<div class="col-xs-1 col-sm-2 col-lg-4"></div>
		</div>
	</div>
			
			
			
	
			
			
	<div class="row">	
		<div class="col-xs-1 col-sm-2 col-lg-4"></div>	
		<p class="col-xs-10 col-sm-8 col-lg-4" id="total">Total: <%=  number_with_precision(@hours_this_year, :precision => 2) %> hrs</p>
		<div class="col-xs-1 col-sm-2 col-lg-4"></div>
	</div>



	<% @time_cards.each do |time_card| %>
	<div class="container">
		<p id = "log"><%= @count = @count+1 %></p>
		
		<div class=".col-md-6 <%= cycle("time_card" , "time_card_2" ) %>">
				<div class="time_card_wrapper">
					<p id = "date"><%= time_card.date.strftime("%A, %h %e %G") %></p>
					
					<% 
						local_start	= Time.new
						local_stop	= Time.new
						local_start = time_card.time_started
						local_stop  = time_card.time_stopped
						
						
						local_start = local_start.strftime('%l:%M%P')
						local_stop = local_stop.strftime('%l:%M%P')
						
						
					%>
		
				<br><p id="the_time"><%= local_start %> - <%= local_stop %></p> 
				<p id="hours"><%= number_with_precision(((time_card.time_stopped - time_card.time_started)/3600), :precision => 2) %> hrs</p>
				<p id="message"><%= time_card.message %></p>
			</div>
			<%= link_to image_tag("edit.png", :class => "edit_icon"), edit_time_card_path(time_card) %>
			<%= link_to image_tag("delete.png", :class => "cancel_icon"), time_card, method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	</div>
	<% end %>

